# docker-compose.yml — QuantumFinance (MinIO + DevContainer + postregSQL)

version: "3.8"

services:
  devcontainer:
    build:
      context: .
      dockerfile: .devcontainer/Dockerfile
    container_name: devcontainer_mba_mlops
    volumes:
      - .:/workspace:cached
    networks:
      - mlops_network
    depends_on:
      - postgres_mlflow
      - minio

  postgres_mlflow:
    image: postgres:15
    container_name: postgres_mlflow
    restart: always
    environment:
      POSTGRES_USER: wrm
      POSTGRES_PASSWORD: senha_segura
      POSTGRES_DB: mlflow_db
    ports:
      - "5432:5432"   # Exponha se precisar conectar localmente; remova se não precisar
    volumes:
      - /home/wrm/pgdata:/var/lib/postgresql/data
    networks:
      - mlops_network

  minio:
    image: minio/minio
    container_name: minio
    command: server /data --console-address ":9001"
    environment:
      MINIO_ROOT_USER: wrm
      MINIO_ROOT_PASSWORD: senha_segura
    ports:
      - "9000:9000"
      - "9001:9001"
    volumes:
      - ./minio_data:/data
    networks:
      - mlops_network

networks:
  mlops_network:
    driver: bridge

